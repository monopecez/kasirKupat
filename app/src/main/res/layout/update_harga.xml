<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/hargaBaruET"
        android:layout_width="fill_parent"
        android:layout_height="128sp"
        android:layout_margin="8dp"
        android:hint="JSON"
        android:singleLine="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Update Harga"
        android:id="@+id/hargaBaruButton"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Cancel"
        android:id="@+id/hargaBaruButtonCancel"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Request"
        android:id="@+id/hargaBaruButtonRequest"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="response here"
        android:layout_margin="8dp"
        android:id="@+id/hargaBaruResponse"/>
</LinearLayout>